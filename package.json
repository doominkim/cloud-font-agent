{
  "name": "cloud-font-agent",
  "version": "1.0.0",
  "description": "Cloud Font Agent - Widget for managing purchased fonts on macOS",
  "main": "dist/main/index.js",
  "scripts": {
    "build": "npm run build:ts && npm run copy:assets && npm run build:native",
    "build:ts": "tsc",
    "copy:assets": "cp src/renderer/index.html dist/renderer/ && cp -r src/renderer/styles dist/renderer/ && cp src/renderer/login.html dist/renderer/ && cp src/renderer/login.js dist/renderer/ && mkdir -p dist/fonts && cp -r fonts/* dist/fonts/ 2>/dev/null || true",
    "build:native": "node-gyp rebuild",
    "dev": "npm run build:ts && npm run copy:assets && electron .",
    "start": "electron .",
    "package:mac": "electron-builder --mac",
    "clean": "rm -rf dist node_modules"
  },
  "keywords": [
    "electron",
    "font",
    "macos"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "canvas": "^3.2.0",
    "node-addon-api": "^7.1.0",
    "node-gyp": "^10.0.1"
  },
  "build": {
    "appId": "com.cloudfont.agent",
    "productName": "Cloud Font Agent",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg"
      ],
      "identity": null,
      "gatekeeperAssess": false,
      "hardenedRuntime": false
    },
    "dmg": {
      "sign": false
    },
    "files": [
      "dist/**/*",
      "fonts/**/*",
      "build/Release/**/*",
      "!dist/builder-*",
      "!dist/*.dmg",
      "!dist/*.blockmap"
    ],
    "asarUnpack": [
      "fonts/**/*"
    ],
    "extraResources": [
      {
        "from": "fonts",
        "to": "fonts",
        "filter": [
          "**/*"
        ]
      }
    ],
    "compression": "maximum"
  }
}
